@model Hekim


<form method="post">
	<div class="border p-3 mt-5">
		<div class="row pb-3">
			<h2 class="text-primary"> Hekim Ekle</h2>

		</div>

		<div class="mb-3">
			<label asp-for="HekimAd" class="p-0"></label>
			<input asp-for="HekimAd" class="form-control" />
			<span asp-validation-for="HekimAd" class=" text-danger"></span>

		</div>
		

		<button type="submit" class="btn btn-lg btn-primary">Hekim Ekle</button>

		<a asp-controller="Hekim" asp-action="Index" class="btn btn-lg btn-primary">
			Hekimlere Dön
		</a>

	</div>
</form> 

@model HastalikTuru


<form method="post">
	<div class="border p-3 mt-5">
		<div class="row pb-3">
			<h2 class="text-primary"> Hastalık Türü Ekle</h2>

		</div>

		<div class="mb-3">
			<label asp-for="HastalikAdi" class="p-0"></label>
			<input asp-for="HastalikAdi" class="form-control" />
			<span asp-validation-for="HastalikAdi" class=" text-danger"></span>

		</div>

		<button type="submit" class="btn btn-lg btn-primary">Hastalık Ekle</button>

		<a asp-controller="HastalikTuru" asp-action="Index" class="btn btn-lg btn-primary">
			Hastalık Türlerine Geri Dön
		</a>

	</div>
</form>

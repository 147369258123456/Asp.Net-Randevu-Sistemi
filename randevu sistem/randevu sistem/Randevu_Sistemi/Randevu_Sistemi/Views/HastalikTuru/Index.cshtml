@model List<HastalikTuru>

@if (TempData["basarili"] != null)
{
    <h2 style="color:green">@TempData["basarili"]</h2>
}


        <div class="container">

                    <div class="row pt-3 pb-4">
                        <div>
                        <h1>Hastalik Türleri</h1>
                        </div>
                    </div>
   
     


    
        <table class=" table table-bordered ">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Hastalık Turu
                    </th>
                    <th>

                    </th>

                    <th>

                    </th>

                
                </tr>
            </thead>
            <tbody>
                @foreach (var hastalikTuru in Model)
                {
                    <tr>
                        <td>@hastalikTuru.Id</td>
                        <td>@hastalikTuru.HastalikAdi</td>
                        <td>
                            <a asp-controller="HastalikTuru" asp-action="Guncelle" asp-route-id="@hastalikTuru.Id" type="button" class="btn btn-success" style="width:150px">Güncelle</a>
                        </td>
                        <td>
                            <a asp-controller="HastalikTuru" asp-action="Sil" asp-route-id="@hastalikTuru.Id" type="button" class="btn btn-danger" style="width:150px">Sil</a>
                        </td>
                        
                        
                    </tr>
                }
                <tr>
                    <td>Id</td>
                    <td>Hastalık Adı</td>
                </tr>
            </tbody>
    
        </table>

            <div class="row pt-3 pb-2">
                <div>
                    <a asp-controller="HastalikTuru" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">
                        Yeni Hastalık Türü Ekle
                    </a>

                </div>

            </div>

        </div>